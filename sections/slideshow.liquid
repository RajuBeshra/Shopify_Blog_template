{% comment %}
** Slideshow - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}

{% if section.blocks.size > 0 %}
  <section id="slideshow-{{ section.id }}"
           class="{% if section.settings.image_stretch == false %}container wide_display--false{% endif %} {% if section.settings.enable_padding == true %}enable_padding--true{% endif %}">
    <div class="slideshow slideshow-transition--{{ section.settings.slideshow_animation }} {% if section.settings.image_stretch == false %}sixteen columns{% endif %}"
         data-slider-id="slideshow-{{ section.id }}"
         data-slideshow-speed="{{ section.settings.slideshow_speed }}"
         data-adaptive-height="{{ section.settings.adaptive_height }}">
      {% for block in section.blocks %}
        <div class="slideshow__gallery-cell slideshow__gallery-cell-slide-{{ forloop.index }}" {{ block.shopify_attributes }} data-block-id="{{ block.id }}">
          <a {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %}>
            {% if block.settings.image %}
              {% render 'image-element',
                      image: block.settings.image,
                      alt: block.settings.image.alt,
                      stretch_width: true,
                      additional_classes: 'slideshow__gallery-cell-image'
              %}
            {% else %}
              {% capture i %}{% cycle "1", "2" %}{% endcapture %}
              {{ 'lifestyle-' | append: i | placeholder_svg_tag: 'placeholder-svg placeholder-svg--slideshow' }}
            {% endif %}
          </a>
          {% if block.settings.title != blank or block.settings.subtext != blank or block.settings.button_label != blank %}
            <div class="slideshow__caption">
              <div class="container">
                <div class="columns {% if block.settings.text_position == 'left' %} eight offset-by-one {% elsif block.settings.text_position == 'right' %} seven offset-by-eight {% else %} ten offset-by-three {% endif %} text-align--{{ block.settings.text_align }}">
                  {% if forloop.first == true and block.settings.title != blank %}
                    <h1 class="slideshow__caption-headline">
                      {{ block.settings.title | escape }}
                    </h1>
                  {% elsif block.settings.title != blank %}
                    <p class="slideshow__caption-headline">
                      {{ block.settings.title | escape }}
                    </p>
                  {% endif %}
                  {% if block.settings.subtext != blank %}
                    <div class="slideshow__caption-subtitle">
                      {{ block.settings.subtext }}
                    </div>
                  {% endif %}
                  {% if block.settings.button_label != blank %}
                    <a href="{{ block.settings.link }}" class="slideshow__caption-button action_button">
                      {{ block.settings.button_label | escape }}
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Slideshow",
  "class": "slideshow-section padding-toggle",
  "max_blocks": 12,
  "settings": [
    {
      "type": "checkbox",
      "id": "image_stretch",
      "label": "Wide display",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_padding",
      "label": "Enable padding",
      "default": true
    },
    {
      "type": "select",
      "id": "slideshow_animation",
      "label": "Transition",
      "default": "fade",
      "options": [
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "slide",
          "label": "Slide"
        }
      ]
    },
    {
      "type": "range",
      "id": "slideshow_speed",
      "label": "Change slides every",
      "min": 0,
      "max": 12,
      "step": 1,
      "default": 6,
      "unit": "sec",
      "info": "Set to 0 to disable autoplay."
    },
    {
      "type": "checkbox",
      "id": "adaptive_height",
      "label": "Enable adaptive height",
      "info": "Slideshow will adjust based on height of individual slides",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1600 x 600px recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Subheading"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Slide link"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "Text position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Slideshow",
    "category": "Image",
    "settings": {
      "slideshow_animation": "fade"
    },
    "blocks": [
      {
        "type": "image",
        "settings": {
          "image": "",
          "title": "The Responsive Shopify Theme",
          "text_position": "center",
          "text_align": "center",
          "button_label": "",
          "link": ""
        }
      },
      {
        "type": "image",
          "settings": {
          "image": "",
          "title": "",
          "text_position": "center",
          "text_align": "center",
          "button_label": "",
          "link": ""
        }
      }
    ]
  }]
}
{% endschema %}
