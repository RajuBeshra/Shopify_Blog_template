{% comment %}
** FAQ page - custom view **
- Page template section
- Uses blocks
{% endcomment %}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {% for block in section.blocks %}
      {% unless block.type == 'heading' %}
        {
          "@type": "Question",
          "name": "{{ block.settings.title | escape }}",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "{{ block.settings.subtitle | strip_html }}"
          }
        }{% unless forloop.last %},{% endunless %}
      {% endunless %}
    {% endfor %}
  ]
}
</script>

{% if section.settings.image %}
<div class="banner-section header_banner dark-overlay-{{ section.settings.slideshow_post_darken }}">
  {% render 'image-element',
          image: section.settings.image,
          alt: section.settings.image.alt,
          stretch_width: true,
          additional_classes: 'banner-section__image'
  %}
  <div class="banner-section__caption">
    <div class="container">
      <div class="ten offset-by-three columns center">
        <h1 class="banner-section__caption-headline">
          {{ page.title }}
        </h1>
      </div>
    </div>
  </div>
</div>
{% else %}
  <div class="container">
    <div class="sixteen columns">
      <div class="section clearfix">
        <h1>{{ page.title }}</h1>
      </div>
    </div>
  </div>
{% endif %}

{% if page.content != '' %}
<div class="container">
  <div class="sixteen columns">
    <div class="section clearfix">
      {{ page.content }}
    </div>
  </div>
</div>
{% endif %}

<div class="container">
  <div class="faqContent {% if section.settings.page_image %}faqImage--true{% endif %} faqImage--{{ section.settings.image_alignment }}">

    <div class="faqColumn">
      {% if section.blocks.size > 0 %}
        <dl class="faqAccordion">
          {% for block in section.blocks %}
            {% if block.type == "heading" and block.settings.heading != blank %}
              <h2 class="faq-heading">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.title != blank %}
              <dt><button type="button" aria-controls="panel-{{ block.id }}" aria-expanded="true"><span class="icon-plus"></span>{{ block.settings.title }}</button></dt>
              <dd id="panel-{{ block.id }}" aria-hidden="false">
                {{ block.settings.subtitle }}
              </dd>
            {% endif %}
          {% endfor %}
        </dl>
      {% endif %}
    </div>

    {% if section.settings.page_image %}
      <div class="faqColumn">
        {% render 'image-element',
                image: section.settings.page_image,
                alt: section.settings.page_image.alt
        %}
      </div>
    {% endif %}
  </div>
</div>

